# Application
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_VERSION=v1

# Database
DATABASE_URL=postgresql://[USER]:[PASSWORD]@[HOST]:[PORT]/[DATABASE]?schema=public&pgbouncer=true
DIRECT_DATABASE_URL=postgresql://[USER]:[PASSWORD]@[HOST]:[PORT]/[DATABASE]?schema=public

# Supabase (optional, for additional features)
SUPABASE_URL=
SUPABASE_ANON_KEY=

# Authentication (for future stories)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=

# AI Service
DEEPSEEK_API_KEY=
DEEPSEEK_API_URL=https://api.deepseek.com

# Monitoring
LOG_LEVEL=info
ENABLE_API_DOCS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100